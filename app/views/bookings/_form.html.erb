
<%= simple_form_for [@bike, @booking] do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :checkin %>
    <%= f.input :checkout %>
  </div>

  <div class="form-actions my-button">
    <%= f.button :submit%>
  </div>
<% end %>
